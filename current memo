 popups,
 eg - 
 $('#fadeandscale').popup({
	    onclose: function() {
            $('#prodetail').html('');
        },
		onopen: function() {
			$('#prodetail').html($('.prodresult').html());
			$('#first_info').append($img);
			$("#friend_email").val('');
        },
        pagecontainer: '.container',
        transition: 'all 0.3s'
    });
    
